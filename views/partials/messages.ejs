<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-warning alert-dismissible fade show p-1 d-flex align-items-center justify-content-between" role="alert">
            <%= error.msg %>
            <span type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <i aria-hidden="true" class="fa fa-times"></i>
            </span>
        </div>
    <% }) %>
<% } %>

<% if(success_msg != '') { %>
        <div class="alert alert-success alert-dismissible fade show p-1 d-flex align-items-center justify-content-between" role="alert">
            <%= success_msg %>
            <span type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <i aria-hidden="true" class="fa fa-times"></i>
            </span>
        </div>
<% } %>

<% if(error_msg != '') { %>
        <div class="alert alert-warning alert-dismissible fade show p-1 d-flex align-items-center justify-content-between" role="alert">
            <%= error_msg %>
            <span type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <i aria-hidden="true" class="fa fa-times"></i>
            </span>
        </div>
<% } %>

<% if(error != '') { %>
        <div class="alert alert-warning alert-dismissible fade show p-1 d-flex align-items-center justify-content-between" role="alert">
            <%= error %>
            <span type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <i aria-hidden="true" class="fa fa-times"></i>
            </span>
        </div>
<% } %>