<style>
  label {
    margin-top: 5px;
  }
  a {
    text-decoration: none;
  }
  
</style>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>

      <%- include ('./partials/messages') %>

      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block w-100 mt-2" class="text-success fw-bold">Login</button>
      </form>
      <div class="text-center mt-2"><h5>OR</h5></div>
      <div class="section ">
        <a href="/auth/google" class="btn btn-danger d-flex justify-content-center align-items-center">
            <i class="fab fa-google left me-2"></i> Login with Google
        </a>
    </div>
      <p class="lead mt-4">
        No Account? <a href="/users/register" class="fw-bold text-info">Register</a>
      </p>
    </div>
  </div>
</div>